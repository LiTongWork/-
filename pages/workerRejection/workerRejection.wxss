.cancel{
    flex: 0 0 64rpx;
    padding: 0 30rpx;
    line-height: 64rpx;
    border-top: 1rpx solid #ddd;
    background-color: #fff;
}
.red{
    color: red!important;
}

.rejection {
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 110rpx;
    margin-top: 20rpx;
    padding: 8rpx 30rpx;
    background-color: #fff;
    z-index: 10000;
}
.rejection{
  display: -webkit-flex;
  display: flex;
}
.rejection .btn{
    flex: 1;
    height: 100%;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    line-height: 100rpx;
    margin: 0;
    background-color: #018ff2;
}
.rejection .btnCancel{
  background-color: #ccc
}
.modal{
  display: none;
}
.show {
  display: block;
  z-index: 99999;
}
.canvas {
  position: absolute;
  left: 50%;
  top: 30%;
  width: 600rpx;
  height: 600rpx;
  overflow: hidden;
  transform: translateX(-50%);
  background-color: #fff;
}
.canvas .openCode{
  height: 92rpx;
  line-height: 92rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  /* font-size: 24rpx; */
}
.canvas .openCode image{
  width: 92rpx;
  height: 92rpx;
  position: absolute;
  right: 0rpx;
  top: 0;
}
#canvasBox{
  position: absolute;
  top: 120rpx;
  left: 50%;
  margin-left: -195rpx;
}
.canvas .logo{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  top: 265rpx;
  margin-left: -50rpx;
  background-color: #fff;
  border-radius: 50%;
}
.canvas .logo image{
  width: 100%;
  height: 100%;
}